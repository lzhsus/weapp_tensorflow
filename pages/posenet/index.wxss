.camera-main {
  position: fixed;left: -9999px;top:0;
  width: 100%;
  height: 100vh;
}
.camera-main .pose-canvas {
  width: 100%;
  height: 100vh;
}

.cover-mian{
  position: fixed;top: 40px;left: 20px;
  width: 160px;height: 180px;
  border: 1px solid #ccc;
  background: rgba(0, 0, 0, 0.1);
  overflow-y: scroll;overflow-x: hidden;
  padding: 4px;box-sizing: border-box;
  color: #fff;font-size: 14px;
}
.cover-mian2{
  position: fixed;top: 40px;right: 20px;z-index: 99999;
  width: 160px;height: 180px;
  border: 1px solid #ccc;
  background: rgba(0, 0, 0, 0.1);
  overflow-y: scroll;overflow-x: hidden;
  padding: 4px;box-sizing: border-box;
  color: #fff;font-size: 14px;
}

.cover-btn {
  position: fixed;
  z-index: 100;
  bottom: 40rpx;
  left: 40rpx;
  width: 670rpx;
  height: 100rpx;
  background: #ff6f00;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 100rpx;
  text-align: center;
}